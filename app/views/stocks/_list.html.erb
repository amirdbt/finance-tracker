<table class="table table-hover mt-3 w-100">
  <thead>
  <tr>
    <th>Ticker</th>
    <th>Name</th>
    <th>Price</th>
    <th>Action</th>
  </tr>
  </thead>
  <tbody>
  <% @tracked_stocks.each do |stock| %>
    <tr>
      <td><%=  stock.ticker  %></td>
      <td><%= stock.name %></td>
      <td><%=  stock.last_price  %></td>
      <td> <%= link_to 'Remove',user_stock_path(stock),method: :delete, data: {confirm: 'Are you sure you want to delete'},
                       class: 'btn btn-sm btn-danger'  %> </td>
    </tr>
  <%  end  %>

  </tbody>
</table>
