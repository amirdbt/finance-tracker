<table class="table table-hover mt-3 w-100">
  <thead>
  <tr>
    <th>Email</th>
    <th>First Name</th>
    <th>Last Name</th>
    <th>Action</th>
  </tr>
  </thead>
  <tbody>
  <% @friends.each do |friend| %>
    <tr>
      <td><%=  friend.email  %></td>
      <td><%= friend.first_name %></td>
      <td><%=  friend.last_name  %></td>
      <td>  <%= link_to 'View Profile', user_path(friend), class:  'btn btn-success btn-sm'  %>
        <%= link_to 'Unfollow',friendship_path(friend),method: :delete, data: {confirm: 'Are you sure you want to unfollow'},
                       class: 'btn btn-sm btn-danger'  %> </td>
    </tr>
  <%  end  %>

  </tbody>
</table>
