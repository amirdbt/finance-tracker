<div class="w-75 mx-5  bg-white p-3 mt-5 pb-5">
  <h3 class="text-center">My Friends</h3>
  <div class="search-area mt-4">
    <%= form_tag search_friend_path, remote: true, method: :get do %>
      <div class="form-group row ">
        <div class="col-sm-9 no-right-padding">
          <%= text_field_tag :friend, params[:friend],
                             placeholder: 'Search friends by name or email...',
                             autofocus: true,
                             class: 'form-control form-control-lg input-search' %>
        </div>
        <div class="col-sm-3 no-left-padding">
          <%= button_tag type: :submit, class: 'btn btn-success btn-search' do %>
            <%= fa_icon "search 2x"%>
          <% end %>
        </div>
      </div>
    <% end %>
  </div>
  <div id="results"></div>
  <% unless @friends.empty? %>
    <%= render 'friends/list' %>
  <%  end %>
</div>
